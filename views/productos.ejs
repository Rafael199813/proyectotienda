<%- include ./header.ejs %>
    <div class="album py-5 bg-light" id="productos">
        <div class="container">

            <div class="row">
                <% for(var i=0; i< tasks.length; i++) { %>
                    <div class="col-md-4">
                        <div class="card mb-4 box">
                            <img class="card-img-top" style="width: 100%" ; display: block;
                                src="<%= tasks[i].imagen %>" data-holderrendered="true">
                            <div class="card-body">
                                <h3>
                                    <%= tasks[i].producto %>
                                </h3><hr>
                                <p class="card-text" >
                                    Precio: <%= tasks[i].precio %>
                                </p>
                                <p class="card-text">
                                    Cantidad: <%= tasks[i].cantidad %>
                                </p>
                                <a href="/detalles/<%= tasks[i]._id%>" class="btn btn-info">Detalles</a>
                            </div>
                        </div>
                    </div>
                <% } %>
            </div>
        </div>
    </div>
    <footer class="text-center">ITVH 2021</footer>
</body>
</html>